@model List<VeiculoModel>
@{
    ViewData["Title"] = "Listagem de Veículos";
}
<div class="text-center">

    <h1 class="display-4">Veículos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Bloqueio</th>
                <th scope="col">Placa</th>
                <th scope="col">Renavam</th>
                <th scope="col">Ações</th>

            </tr>
        </thead>
        <tbody>
           @if(Model != null && Model.Any())
            {
                foreach(VeiculoModel veiculo in Model)
                {
                    <tr>
                        <th scope="row">@veiculo.Id</th>
                        <td>@veiculo.Bloqueio</td>
                        <td>@veiculo.Placa</td>
                        <td>@veiculo.Renavam</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-warning" asp-route-id="@veiculo.Id" asp-controller="Veiculo" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-primary" asp-route-id="@veiculo.Id" asp-controller="Veiculo" asp-action="Visualizar">Visualizar</a>

                            </div>
                        </td>
                    </tr>

                }

            }
        </tbody>
    </table>
    <br>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" asp-controller="Veiculo" asp-action="Criar"> Cadastrar Veículo</a>
    </div>

</div>



